---
import hamburgerIcon from "@/assets/hamburger.webp";
import Footer from "@/components/Footer/Footer.astro";
import type { SidebarProps } from "@/components/Sidebar/Sidebar.astro";
import Sidebar from "@/components/Sidebar/Sidebar.astro";
import type { Locale } from "@/util/i18n";
import { Image } from "astro:assets";
import Page, { type MetaTagData } from "./Page.astro";

type Props = {
    meta?: MetaTagData;
    lang: Locale;
} & SidebarProps;

const { sidebarMode, meta, lang, headings } = Astro.props;
---

<Page lang={lang} meta={meta}>
    <slot name="head" slot="head" />

    <Sidebar sidebarMode={sidebarMode} headings={headings}>
        <slot />
    </Sidebar>
</Page>
