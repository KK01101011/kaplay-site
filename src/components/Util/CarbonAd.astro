---
type Props = {
    onlyClassic?: boolean;
};

const { onlyClassic = false } = Astro.props;
---

<div
    class="bottom-0 right-0 z-50 flex h-auto items-center justify-center p-4 xl:fixed"
    class:list={{
        "min-h-44": onlyClassic,
        "min-h-[16rem]": !onlyClassic,
    }}>
    <script
        async
        type="text/javascript"
        src={`//cdn.carbonads.com/carbon.js?serve=CW7DE53Y&placement=kaplayjscom&format=${onlyClassic ? "responsive" : "cover"}`}
        id="_carbonads_js"
        data-astro-rerun></script>
</div>
